<section class="buscador">
   <form action="/mvc/index.php" method="POST">
       <input type="text" class="pokemon" name="pokemonesBusqueda" placeholder="Ingrese el nombre, tipo o número de pokémon">
       <input class="quienes" type="submit" value="Quien es este pokemon?">
   </form>
</section>

<!-- Mostrar el enlace para agregar nuevo Pokémon solo si el usuario está logueado -->
{{#userLogueado}}
<div class="div-boton" style="padding:10px">
    <a class="nuevoPokemon" style="text-decoration: none; color: white; text-align: center" href="/mvc/index.php?controller=Pokemones&action=add" >
        Nuevo Pokémon
    </a>
</div>
{{/userLogueado}}

<section class="tabla">
    <table class="">
        <tr>
            <th>Imagen</th>
            <th>Tipo</th>
            <th>Numero</th>
            <th>Nombre</th>
            <!-- Mostrar la columna de acciones solo si el usuario está logueado -->
            {{#userLogueado}}
                <th>Acciones</th>
            {{/userLogueado}}
        </tr>
        {{#pokemones}}
            <tr>
                <td><a href="/mvc/index.php?controller=Pokemones&id={{id}}&nombre={{imagen}}&tipo={{tipo}}&numero={{numero}}&descripcion={{descripcion}}&action=infoPokemon"><img class="img_p" src="public/imagenes/pokemones/{{numero}}.png"></a></td>
                <td><img class="img_p" style="height:1em" src="public/imagenes/TipoPokemon/tipo_{{tipo}}.png"></td>
                <td>{{numero}}</td>
                <td>{{imagen}}</td>
                <!-- Mostrar los botones de acciones solo si el usuario está logueado -->
                {{#userLogueado}}
                <td data-label="Acciones" class="action-buttons">
                  <a href="/mvc/index.php?controller=Pokemones&id={{id}}&nombre={{imagen}}&tipo={{tipo}}&numero={{numero}}&descripcion={{descripcion}}&action=modificar"><button>Modificar</button></a>
                  <a href="/mvc/index.php?controller=Pokemones&id={{id}}&action=delete"><button>Eliminar</button></a>
                </td>
                {{/userLogueado}}
            </tr>
        {{/pokemones}}
    </table>
</div>
